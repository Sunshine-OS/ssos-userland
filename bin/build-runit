set -e

COMPONENT="runit"

usage() 
{
	echo "usage: build-${COMPONENT} [-s] [debug|nondebug]" >&2
	exit 1
}

[ "$1" = "-h" ] && usage
[ "$1" = "-?" ] && usage

if echo $0 | grep ^/ 2>&1 > /dev/null ; then
	dir=$(dirname $0)
else
	dir=$PWD/$(dirname $0)
fi
. $dir/../inc/userland.ksh

do_getopts $*
shift `expr $optind - 1`


export gatepath="${USERLAND_WS}components/${COMPONENT}"
export fullpath="${gatepath}"

cflags_debug=" -g -O0 "

msg "building ${COMPONENT}"

init_build $1


buildit()
{

	msg "making ${COMPONENT}"
	echo "#define VERSCODE \"Sunshine-runit v2.1.5_${BUILD}\"" > $fullpath/h/version.h
	cd $fullpath && make

	msg "packaging ${COMPONENT}"
	cd $fullpath 
	rm -f pkginfo
	eval "sed 's/%BUILD/${BUILD}/g' pkginfo.in" > pkginfo
	make package
	pkgtrans . SSOSrunit.pkg SSOSrunit
	rm -f pkginfo
	rm -f h/version.h
	mv SSOSrunit.pkg $USERLAND_WS$pkgdir
}

buildit

